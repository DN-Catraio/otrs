	"perl(Text::CSV_XS)" \
	"perl(YAML::XS)" 

RUN yum -y install \
	"perl(Archive::Tar)" \
	"perl(Archive::Zip)" \
	"perl(Crypt::SSLeay)" \
	"perl(Date::Format)" \
	"perl(DateTime)" \
	"perl(DBD::Pg)" \
